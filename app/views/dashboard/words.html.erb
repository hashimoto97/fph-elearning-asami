<div class="container py-5">
    <div class="row">
        <div class="col-sm-4">
            <div class="card text-center">
                <div class="card-body mx-auto">
                    <div class="avatar">
                        <% if @user.image? %>
                            <%= image_tag(@user.image.url) %>
                        <% else %>
                            <%= image_tag("default.png") %>
                        <% end %>
                    </div>
                </div>
                
                <h3 class="mb-0"><%= @user.name %></h3>
                <div class="text-gray mb-15"><%= @user.email %></div>
                
                <div class="mt-3 mb-3">
                    <%= link_to "View profile",user_path(id:current_user.id),class:"btn btn-warning btn-sm" %>
                    <%= link_to "Update profile",edit_user_path(id:current_user.id),class:"btn btn-primary btn-sm" %>
                </div>
            </div>
        </div>
        <div class="col-sm-8">
            <div class="card activity-feed">
                <div class="card-header">
                    <strong class="heading">Words learned</strong>
                </div>
                
                <table class="table">
                    <thead class="thead-light">
                        <tr>
                            <th scope="col">Word</th>
                            <th scope="col">Your Answer</th>
                            <th scope="col">Correct Answer</th>
                        </tr>
                    </thead>
                    <% @answers.each do |answer| %>
                        <tr>
                            <td><%= answer.word.content %></td>       
                            <td><%= answer.choice.content %></td>
                            <td><%= answer.word.correct_answer.content %></td>
                        </tr>
                    <% end %>
                </table>
                
                </div>
            </div>
        </div>
        <div class="paginate mt-4">
            <%= will_paginate @answers %>
        </div>    
    </div>
</div>
