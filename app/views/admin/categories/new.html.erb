<div class="container">
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-sm-6">
                    <span>Admin | Categories</span>
                </div>
                <div class="col-sm-6 text-right">
                    <%= link_to "Back",admin_categories_path,class:"btn btn-sm" %>
                </div>
            </div>
        </div>
        <div class="col-md-6 mt-3 mb-5 mx-auto">
            <%= form_for [:admin, @category] do |f| %>
                <div class="form-group">
                    <%= f.label :title %>

                    <%= f.text_field :title,class: "form-control" %>
                </div>

                <div class="form-group">
                    <%= f.label :description %>

                    <%= f.text_field :description,class: "form-control" %>
                </div>

                <%= f.submit "Save Category",class: "btn btn-primary btn-block" %>
            <% end %>
        </div>
    </div>
</div>