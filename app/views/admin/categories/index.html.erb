<div class="container">
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-sm-6">
                    <span>Admin | Categories</span>
                </div>
                <div class="col-sm-6 text-right">
                    <%= link_to "Add category",new_admin_category_path,class:"btn btn-sm btn-success" %>
                </div>
            </div>
        </div>
        <table class="table">
            <tbody>
                <tr>
                    <th class="col-xs-3">Title</th>
                    <th class="col-xs-5">Description</th>
                    <th class="col-xs-1 text-center">Words</th>
                    <th class="col-xs-2">Action</th>
                </tr>
            </tbody>
            <% @categories.each do |category| %>
                <tr>
                    <td><%= link_to category.title,admin_category_words_path(category.id) %></td>
                    <td><%= category.description %></td>
                    <td class="text-center"><%= category.words.count %></td>
                    <td>
                        <%= link_to "Add word",new_admin_category_word_path(category.id),class:"btn btn-primary" %>
                        <%= link_to "Edit",edit_admin_category_path(category.id),class:"btn btn-warning" %>
                        <%= link_to "Remove",admin_category_path(category.id),method: :delete %>
                    </td>
                </tr>
            <% end %>
        </table>
    </div>
    <div class="paginate mt-4">
        <%= will_paginate %>
    </div>
</div>