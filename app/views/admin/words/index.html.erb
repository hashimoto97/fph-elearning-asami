<div class="container">
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-sm">
                    <span>Admin | <%= @category.title %> - Words</span>
                </div>
                <div class="col-sm-6 text-right">
                    <%= link_to "Add word",new_admin_category_word_path(@category.id),class:"btn btn-sm btn-success" %>
                    <%= link_to "Back",admin_categories_path,class:"btn btn-sm" %>
                </div>
            </div>
        </div>
        <div>
            <h4><%= @category.title %></h4>
            <p><%= @category.description %></p>
        </div>
        <table class="table">
            <tbody>
                <tr>
                    <th class="col-xs-3">Words</th>
                    <th class="col-xs-5">Answer</th>
                    <th class="col-xs-2">Action</th>
                </tr>
            </tbody>
            <% @words.each do |word| %>
                <tr>
                    <td><%= word.content %></td>
                    <td>#</td>
                    <td>
                        <%= link_to "Edit",edit_admin_category_word_path(@category.id,word.id),class:"btn btn-warning" %>
                        <%= link_to "Remove",admin_category_word_path(@category.id,word.id),method: :delete %>
                    </td>
                </tr>
            <% end %>
        </table>
    </div>
    <div class="paginate mt-4">
        <%= will_paginate %>
    </div>
</div>