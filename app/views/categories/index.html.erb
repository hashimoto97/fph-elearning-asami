<h3 class="mt-3 mb-3">Categories</h3>
<div class="row">
    <% @categories.each do |category| %>
        <div class="col-md-4">
            <div class="card bg-light mb-3" style="max-width: 15rem;">
                <div class="card-body">
                    <h5 class="card-title"><%= category.title %></h5>
                    <p class="card-text"><%= category.description %></p>

                    <% if lesson=current_user.lessons.find_by(category_id: category.id) %>
                        <%= link_to "Result",lesson_path(lesson), class:"btn btn-primary" %>
                    <% else %>
                        <%= button_to "Learn" ,lessons_path,params: {category_id: category.id}, class:"btn btn-primary" %>
                    <% end %>
                </div>
            </div>
        </div>
    <% end %>
</div>

<div class="paginate mt-4">
    <%= will_paginate %>
</div>
