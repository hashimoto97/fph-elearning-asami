<div class="jumbotron">
    <div class="row">
        <div class="col-md-8">
            <div class="media">
                <div class="avatar">
                    <% if @user.image? %>
                        <%= image_tag(@user.image.url) %>
                    <% else %>
                        <%= image_tag("default.png") %>
                    <% end %>
                </div>
                <div class="media-body ml-3">
                    <h1><%= @user.name %></h1>
                    <p><%= @user.email %></p>
                    <div class="col">
                        <%= render 'follow_form' if logged_in? %>
                    </div>    
                </div>
            </div>
        </div>
        <div class="col-md-4 text-center">
            <div class="row">
                <div class="col">
                    <h3><%= link_to "#",@user %></h3>
                    words learned
                </div>
                <div class="col">
                    <h3>
                        <%= link_to @user.active_relationships.count,following_user_path(@user) %>
                    </h3>
                    following
                </div>
                <div class="col">
                    <h3>
                        <%= link_to @user.passive_relationships.count,followers_user_path(@user) %>
                    </h3>
                    followers
                </div>
            </div>
        </div>
    </div>
    
</div>