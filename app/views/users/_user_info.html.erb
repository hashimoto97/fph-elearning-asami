<div class="jumbotron">
    <div class="row">
        <div class="col-md-8">
            <div class="media">
                <% if @user.image? %>
                    <div>
                        <%= image_tag(@user.image.url, class: "avatar") %>
                    </div>
                <% end %>
                <div class="media-body ml-3">
                    <h1><%= @user.name %></h1>
                    <p><%= @user.email %></p>
                </div>
                
            </div>
        </div>
        <div class="col-md-4 text-center">
            <div class="row">
                <div class="col">
                    <h3><%= link_to "#",@user %></h3>
                    words learned
                </div>
                <div class="col">
                    <h3>
                        <%= link_to "#","#" %>
                    </h3>
                    following
                </div>
                <div class="col">
                    <h3>
                        <%= link_to "#","#" %>
                    </h3>
                    followers
                </div>
            </div>
        </div>
    </div>
    
</div>